<!doctype html>
<html>
  <head>
    <title>Meetal</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/matcha.css">
  </head>
  <body>
  <% include header.ejs %>
    <div style='display: inline-block' id="cont_wrapper">
      <div class='list_of_user'>
        <div class='cont_list'>
      <% if (rows) { for (var i = 0; rows[i]; i++) 
          {%>
            <div class='one_user<%= rows[i]['code']%>'>
            <div class='img_border'>
            <img src="/images/<% if (rows[i]['user_snap_profile']) { %>user_img/<%= rows[i]['user_snap_profile'] %><% } else { %>skull.jpg<% } %>">
            </div>
            <% if (rows[i]['views'] != 0) { %>
            <i class='red_notif_message'><%= rows[i]['views'] %></i>
            <% } %>
            <%= rows[i].user_login.toUpperCase() %>
            </div>
          <%}} %>
        </div>
      </div>
      <div class='chat'>

      <% if (rows)
      {%>
        <div class="arrow bounce"></div>
        <p class='text_arrow'>Cliquez sur une discussion</p>
      <%} else {%>
        <p class='text_arrow'>Vous n'avez aucun contact.</p>
      <% } %>
      </div>
    </div>
<% include footer.ejs %>
 <script src="/jquery-3.1.1.min.js"></script>
 <script src="/message.js"></script>
 <script type="text/javascript">

    <% if (rows) { %>
      var rows = <%- JSON.stringify(rows) %>;
    <% } %>

    <% if (message) { %>
    var messages = <%- JSON.stringify(message) %>;
    <% } %>

</script>
  </body>
</html>